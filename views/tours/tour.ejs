<h2 class="page-header"><%= tour[0].title %></h2>
<div class="tour-details">
  <div>
    <% if (tour[0].image != null && tour[0].image != '') { %> 
      <img
      src="/images/<%= tour[0].image %>"
      alt="<%= tour[0].title %>"
      width="150"
    />
    <% } %>
    <div class="tour-details-btn-grid">
      <a class="btn btn-primary" href="/tours/<%= tour[0].id %>/edit">Edit</a>
      <a class="btn btn-danger" href="/tours/<%= tour[0].id %>/delete">Delete</a>
      <a class="btn btn-primary tour-details-category-btn" href="/categories/<%= tour[0].name %>">View Category</a>
    </div>    
  </div>
  <div class="tour-details-grid">
    <div class="tour-details-label">
      Category:
    </div>
    <div><%= tour[0].name %></div>
    <div class="tour-details-label">
      Location:
    </div>
    <div><%= tour[0].location %></div>
    <div class="tour-details-label">
      Short description:
    </div>
    <div><%= tour[0].description %></div>
  </div>  
</div>

<div class="btn-row">
  <a class="btn btn-primary" href="/tours">Back to Tours </a>
</div>

