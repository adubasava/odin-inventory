<h2 class="page-header">Delete Tour</h2>
<form method="POST" action="/tours/<%= id %>/delete">
  <%- include("_form_confirm") %>
  <div class="form-row form-row-end btn-row">
    <a class="btn btn-danger" href="/tours/<%= id %>">Cancel</a>
    <button
      class="btn btn-danger"
      type="submit"
      onclick="return confirm('Are you sure?')"
    >
      Delete
    </button>
  </div>
</form>
