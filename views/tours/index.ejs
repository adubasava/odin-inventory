<h2 class="page-header">Tours</h2>
<div class="tour-grid-cards">
  <% tours.forEach(tour => { %>
    <div class="tour-card"> 
      <div class="tour-title">
        <a href="/tours/<%= tour.id %>"><%= tour.title %> </a>
      </div>
      <div>
        <% if (tour.imageurl != null && tour.imageurl != '') { %> 
          <img class="img-big"
        src="<%= tour.imageurl %>"
        alt="<%= tour.title %>"
      />
      <% } %>
      </div>    
      <div class="btn-row">
        <a class="btn btn-primary" href="/tours/<%= tour.id %>">View</a>
        <a class="btn btn-primary" href="/tours/<%= tour.id %>/edit">Edit</a>
        <a class="btn btn-danger" href="/tours/<%= tour.id %>/delete">Delete</a>
      </div>    
    </div>
  <% }); %>  
</div>


