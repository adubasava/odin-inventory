<h2 class="page-header">Update Tour</h2>
<form method="POST" action="/tours/<%= tour[0].id %>/edit">
  <div class="form-row">
    <div class="form-item">
        <label for="title">Tour title: </label>
        <input id="title" type="text" name="title" value="<%= tour[0].title %>" required/>
    </div>
    <div class="form-item">
        <label for="categoryId">Category: </label>
        <select name="categoryId" id="categoryId">
        <% categories.forEach(category => { %>
            <% if (tour && category.id === tour[0].category_id) { %>
                <option selected label="<%= category.name %>" value="<%= category.id %>">
              <% } else { %>
                <option value="<%= category.id %>">
                    <%= category.name %>
                </option>
            <% } %>
        <% }); %>  
        </select> 
    </div>
</div>
<div class="form-row">
    <div class="form-item">
        <label for="location">Location: </label>
        <input id="location" type="text" name="location" value="<%= tour[0].location %>" />
    </div>
    <div class="form-item">
        <label for="imageurl">Image URL: </label>
        <input id="imageurl" type="text" name="imageurl" value="<%= tour[0].imageurl %>" />
    </div>
</div>
<div class="form-row">
    <div class="form-item">
        <label for="description">Short description: </label>
        <textarea name="description" id="description" /><%= tour? tour[0].description : "" %>
        </textarea>
    </div>
</div>
<%- include("_form_confirm") %>
  <div class="form-row form-row-end btn-row">
    <a class="btn btn-danger" href="/tours/<%= tour[0].id %>">Cancel</a>
    <button class="btn btn-primary" type="submit">Update</button>
  </div>
</form>
